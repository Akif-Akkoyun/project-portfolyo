@using PortfolyoApp.Admin.Mvc.Models

@model List<BlogPostViewModel>



<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Blog List</h2>
            <a id="addbutton" class="btn btn-primary" asp-controller="BlogPost" asp-action="AddBlogPost">Add</a>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Title
                        </th>
                        <th>
                            Content
                        </th>
                        <th>
                            ImageUrl
                        </th>
                        <th>
                            PublishDate
                        </th>
                        <th>
                            CreatedAt
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @(item.Content.Length > 50 ? item.Content.Substring(0,50)+"...": item.Content)
                            </td>
                            <td>
                                @item.ImageUrl
                            </td>
                            <td>
                                @item.PublishDate
                            </td>
                            <td>
                                @item.CreatedAt
                            </td>
                            <td>
                                <a class="btn btn-primary" asp-controller="BlogPost" asp-action="EditBlogPost" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-danger" asp-controller="BlogPost" asp-action="DeleteBlogPost" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<style>
    #addbutton {
        position: relative;
        bottom: 10px;
        left: 990px;
    }
</style>