@model List<ExperienceViewModel>



<div class="row">
    @for (int i = 0; i < Model.Count; i += 2)
    {
        <div class="row">
            <div class="col-md-6">
                <div class="resume-wrap ftco-animate">
                    <span class="date">@Model[i].StartMonth @Model[i].StartYear - @Model[i].EndMonth @Model[i].EndtYear</span>
                    <h2>@Model[i].Title</h2>
                    <span class="position">@Model[i].Company</span>
                    <p class="mt-4">@Model[i].Description</p>
                </div>
            </div>

            @if (i + 1 < Model.Count)
            {
                <div class="col-md-6">
                    <div class="resume-wrap ftco-animate">
                        <span class="date">@Model[i + 1].StartMonth @Model[i].StartYear - @Model[i + 1].EndMonth @Model[i].EndtYear</span>
                        <h2>@Model[i + 1].Title</h2>
                        <span class="position">@Model[i + 1].Company</span>
                        <p class="mt-4">@Model[i + 1].Description</p>
                    </div>
                </div>
            }
        </div>
    }
</div>