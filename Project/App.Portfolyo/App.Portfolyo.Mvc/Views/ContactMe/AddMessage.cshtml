@using PortfolyoApp.Mvc.Models


@model ContactViewModel

@{
    Layout = null;
}
<partial name="Partials/_PageStyles" />
<header>
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar ftco-navbar-light site-navbar-target" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">AKIF</a>
            <button class="navbar-toggler js-fh5co-nav-toggle fh5co-nav-toggle" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu"></span> Menu
            </button>

            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav nav ml-auto">
                    <li class="nav-item"><a asp-action="Index" asp-controller="Home" class="nav-link"><span>Home</span></a></li>
                    <li class="nav-item"><a href="#about-section" class="nav-link"><span>About</span></a></li>
                    <li class="nav-item"><a href="#resume-section" class="nav-link"><span>Resume</span></a></li>
                    <li class="nav-item"><a href="#services-section" class="nav-link"><span>Services</span></a></li>
                    <li class="nav-item"><a href="#skills-section" class="nav-link"><span>Skills</span></a></li>
                    <li class="nav-item"><a href="#projects-section" class="nav-link"><span>Projects</span></a></li>
                    <li class="nav-item"><a href="#blog-section" class="nav-link"><span>My Blog</span></a></li>
                    <li class="nav-item"><a asp-action="AddMessage" asp-controller="ContactMe" class="nav-link"><span>Contact</span></a></li>
                    <li class="nav-item"><a asp-action="Login" asp-controller="Auth" class="nav-link"><span>Login/Register</span></a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<br />
<br />
<br />

<div class="container">
    <div>
        <div class="col-md-10 heading-section text-center ftco-animate">
            <h1 class="big big-2">Contact</h1>
            <h2 class="mb-4">Contact Message</h2>
        </div>
        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success text-center">
                @ViewBag.Success
            </div>
        }
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">
                @ViewBag.Error
            </div>
        }    
        <br />
        <div class="row no-gutters block-9">
            <div class="col-md-6 order-md-last d-flex">
                <form asp-action="AddMessage" asp-controller="ContactMe" class="bg-light p-4 p-md-5 contact-form">
                    <div class="form-group">
                        <input asp-for="Name" class="form-control" placeholder="Your Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Email" class="form-control" placeholder="Your Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select asp-for="Subject" name="Subject" id="subjectSelect">
                            <option value="Yeni Proje">Yeni Proje</option>
                            <option value="Mevcut Projenin Geliştirilmesi">Mevcut Projenin Geliştirilmesi</option>
                            <option value="Ara Yüz">Ara Yüz</option>
                            <option value="Veri Tabanı">Veri Tabanı</option>
                            <option value="Api Sorunları">Api Sorunları</option>
                            <option value="Veri Tabanı">Veri Tabanı</option>
                            <option value="Custom">Custom</option>
                        </select>
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group" id="customInputGroup" style="display: none;">
                        <input asp-for="Subject" class="form-control" placeholder="Subject">
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <textarea asp-for="Message" cols="30" rows="7" class="form-control" placeholder="Message"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
            </div>
            <div class="col-md-6 d-flex">
                <img src="~/theme/images/akif.png" style="height : 550px" id="img"/>
            </div>
        </div>
    </div>
</div>
<partial name="Partials/_PageScripts" />

<style>
    #img{
        position : relative;
        left : 100px;
    }
</style>
<script>
    document.getElementById('subjectSelect').addEventListener('change', function () {
        var customInputGroup = document.getElementById('customInputGroup');
        if (this.value === 'Custom') {
            customInputGroup.style.display = 'block';
        } else {
            customInputGroup.style.display = 'none';
        }
    });

</script>